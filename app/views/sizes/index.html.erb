<h1>Sizes</h1>

<div class="card">
  <div class="card-body">
    <% @sizes.each_with_index do |size, index| %>
      <% if index != 0 %>
        <div class="row"><div class="col"><hr /></div></div>
      <% end %>

      <div class="row size" id="<%= dom_id(size) %>">
        <div class="col-sm-1 text-center">
          <%= link_to sizes_path(anchor: dom_id(size)) do %>
            <strong><%= size.published_at.strftime("%b %d") %></strong>
          <% end %>
        </div>
        <div class="col">
          <strong class="<%= size_class(size.name) %>"><%= size.name.titleize %>:</strong>
          <strong><%= size.name %></strong>
          <%#= simple_format size.description %>
        </div>
      </div>
    <% end %>

    <% if @sizes.empty? %>
      <div>No sizes</div>
    <% end %>
  </div>
</div>